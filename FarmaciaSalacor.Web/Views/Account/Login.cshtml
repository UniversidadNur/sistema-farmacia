@model FarmaciaSalacor.Web.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Ingreso al Sistema";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="container" style="max-width: 520px;">
    <div class="erp-panel mt-4">
        <div class="erp-panel-header">
            <div class="w-100 text-center">
                <div class="h5 mb-0">Bienvenido a Farmacia Salacor</div>
            </div>
        </div>
        <div class="erp-panel-body">
            @if ((ViewBag.ResetActive as bool?) == true)
            {
                <div class="alert alert-warning py-2 small" role="alert">
                    <strong>Modo recuperación activo.</strong>
                    Ingrese con usuario <strong>@(ViewBag.ResetUsername ?? "admin")</strong> y la contraseña definida en <strong>FARMACIA_RESET_ADMIN_PASSWORD</strong>.
                    Luego elimine esa variable en Railway.
                </div>
            }
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <div class="mb-2">
                    <label asp-for="Username" class="form-label form-label-sm"></label>
                    <input asp-for="Username" class="form-control form-control-sm" autocomplete="username" />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>

                <div class="mb-2">
                    <label asp-for="Password" class="form-label form-label-sm"></label>
                    <div class="input-group input-group-sm">
                        <input asp-for="Password" id="loginPassword" class="form-control" autocomplete="current-password" />
                        <button class="btn btn-outline-secondary" type="button" id="toggleLoginPassword" aria-label="Mostrar u ocultar contraseña">
                            <i class="fa-solid fa-eye"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-2">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label small" asp-for="RememberMe"></label>
                </div>

                <div class="text-danger small mb-2">
                    @Html.ValidationSummary(excludePropertyErrors: true)
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fa-solid fa-right-to-bracket"></i>
                        Entrar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const input = document.getElementById('loginPassword');
            const button = document.getElementById('toggleLoginPassword');
            if (!input || !button) return;

            button.addEventListener('click', function () {
                const isPassword = (input.getAttribute('type') || '').toLowerCase() === 'password';
                input.setAttribute('type', isPassword ? 'text' : 'password');

                const icon = button.querySelector('i');
                if (icon) {
                    icon.classList.toggle('fa-eye', !isPassword);
                    icon.classList.toggle('fa-eye-slash', isPassword);
                }
            });
        });
    </script>
}
